<sg.gov.msf.bbss.apputils.ui.component.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingRight="@dimen/dimen_20"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvListRowHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_10"
            android:layout_weight="1"
            android:text="@string/text_app_dummy_hyphen"
            android:textStyle="bold"
            android:textSize="@dimen/app_general_font_size" />

        <include
            android:id="@+id/listview_row_1"
            layout="@layout/show_label_textview_with_dollar_no_line_single_choice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvListRowHeader"/>

        <include
            android:id="@+id/listview_row_2"
            layout="@layout/show_label_textview_with_dollar_no_line_single_choice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listview_row_1" />

        <include
            android:id="@+id/listview_row_3"
            layout="@layout/show_label_textview_with_dollar_no_line_single_choice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listview_row_2" />

        <include
            android:id="@+id/listview_row_4"
            layout="@layout/show_label_textview_with_dollar_no_line_single_choice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listview_row_3" />

    </LinearLayout>

    <RadioButton
        android:id="@+id/checkableChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:focusable="false"
        android:clickable="false"
        android:button="@drawable/single_radio_choice"/>

</sg.gov.msf.bbss.apputils.ui.component.CheckableRelativeLayout><!-- From: file:/Users/chandraat/AndroidStudioProjects/BBS_4/babyBonusAppUtils/src/main/res/layout/listitem_4rows_header_single_choice.xml -->