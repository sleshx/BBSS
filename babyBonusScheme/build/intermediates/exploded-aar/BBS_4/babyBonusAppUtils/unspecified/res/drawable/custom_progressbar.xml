<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/theme_gray_dark"
                android:centerY="1.0"
                android:endColor="@color/theme_gray_dark"
                android:startColor="@color/theme_gray_dark" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/theme_blue"
                    android:centerY="1.0"
                    android:endColor="@color/theme_blue_light"
                    android:startColor="@color/theme_blue_dark" />
            </shape>
        </clip>
    </item>

