<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_10"
            android:layout_weight="6"
            android:text="@string/text_app_dummy_field_name"
            android:textSize="@dimen/app_general_font_size" />

        <TextView
            android:id="@+id/tvHash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_10"
            android:layout_weight="1"
            android:text="@string/text_app_dummy_hash"
            android:textSize="@dimen/app_general_font_size" />

        <EditText
            android:id="@+id/etValue1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dimen_10"
            android:layout_weight="2"
            android:textSize="@dimen/app_general_font_size" />

        <TextView
            android:id="@+id/tvHyphen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen_10"
            android:layout_weight="1"
            android:text="@string/text_app_dummy_hyphen"
            android:textSize="@dimen/app_general_font_size" />

        <EditText
            android:id="@+id/etValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="@dimen/dimen_10"
            android:layout_weight="2"
            android:textSize="@dimen/app_general_font_size" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/theme_gray_dark" />

</LinearLayout><!-- From: file:/Users/chandraat/AndroidStudioProjects/BBS_4/babyBonusAppUtils/src/main/res/layout/show_label_two_edittext_row.xml -->