            android:layout_weight="1"
            android:text="@string/text_app_dummy_field_name"
            android:textSize="@dimen/app_general_font_size" />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dimen_05"
            android:layout_weight="1"
            android:text="@string/text_app_dummy_hyphen"
            android:textSize="@dimen/app_general_font_size" />

    </LinearLayout>

