<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content"
    android:background="@drawable/check_popup_shape"
    android:orientation="vertical">
    <TextView
        android:id="@+id/pop_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/info_two_children_are_siblings"/>
    <Button
        android:id="@+id/check_ok_Btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_gradient"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="OK"/>

</LinearLayout>
