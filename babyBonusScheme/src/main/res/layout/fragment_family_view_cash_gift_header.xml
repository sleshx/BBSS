<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="sg.gov.msf.bbss.view.home.familyviewold.H02FamilyViewCashGiftDetailsFragment">

    <!-- Instructions -->

    <include
        android:id="@+id/screen_instructions"
        layout="@layout/screen_instructions_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_title_bar" />

    <!-- Child Particulars-->

    <include
        android:id="@+id/section_child_particulars"
        layout="@layout/section_header_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/screen_instructions" />

    <include
        android:id="@+id/family_view_child_birth_cert"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_child_particulars" />

    <include
        android:id="@+id/family_view_child_name"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_child_birth_cert" />

    <include
        android:id="@+id/family_view_child_birthday"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_child_name" />

    <!-- Nominated Account Holder Particulars-->

    <include
        android:id="@+id/section_nah_particulars"
        layout="@layout/section_header_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_child_birthday" />

    <include
        android:id="@+id/family_view_nah_id"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/section_nah_particulars" />

    <include
        android:id="@+id/family_view_nah_name"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_nah_id" />

    <include
        android:id="@+id/family_view_nah_birthday"
        layout="@layout/show_label_textview_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_nah_name" />

    <!-- Cash Gift List View Header -->

    <include
        android:id="@+id/family_view_cg_list_view_header"
        layout="@layout/section_header_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_view_nah_birthday" />

</RelativeLayout>
