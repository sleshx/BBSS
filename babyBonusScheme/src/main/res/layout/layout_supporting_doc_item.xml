<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tvDocName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/app_general_font_size"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text=""/>

    <include
        android:id="@+id/delete_button_section"
        layout="@layout/clickable_1button_with_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <View
        android:layout_below="@+id/delete_linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/theme_gray_dark"
        />

</RelativeLayout>
